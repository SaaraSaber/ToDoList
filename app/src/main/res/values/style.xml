        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/yakanbakhregular</item>
    </style>

    <style name="textTab" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
