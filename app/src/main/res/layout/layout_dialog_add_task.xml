<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/simple_background_add_task"
    android:orientation="vertical"
    android:padding="@dimen/padding_all_screen">


    <EditText
        style="@style/text_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_background_edit_text_add_task"
        android:hint="کار خود را وارد کنید"
        android:maxLength="50"
        android:maxLines="1"
        android:padding="@dimen/_15sdp"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_between_object"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_category"
            style="@style/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/simple_background_category"
            android:padding="@dimen/_8sdp"
            android:text="دسته بندی" />

        <ImageView
            android:id="@+id/btn_alarm"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/vector_alarm"
            android:tint="@color/underwaterMoonlight"
            tools:ignore="UseAppTint" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/simple_background_button_send"
            android:gravity="center"
            app:backgroundTint="@color/underwaterMoonlight"
            app:cornerRadius="@dimen/_50sdp"
            app:icon="@drawable/vector_send"
            app:iconGravity="textEnd"
            app:iconTint="@color/white" />
    </LinearLayout>


</LinearLayout>